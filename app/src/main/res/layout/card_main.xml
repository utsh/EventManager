<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    <!-- A CardView that contains a TextView -->

    <android.support.v7.widget.CardView
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_view"
android:layout_gravity="center"
android:layout_width="match_parent"
android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:elevation="6dp"
card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <ImageView
                android:id="@+id/image_card"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:layout_gravity="center"
                card_view:srcCompat="@mipmap/ic_launcher" />



            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_card"
>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/event_name_plain"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="@string/name"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textSize="14dp"
                            android:typeface="normal" />

                        <TextView
                            android:id="@+id/event_name_inflate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="NAME"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textSize="14dp"
                            android:typeface="normal" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
    <TextView
                            android:id="@+id/event_date_plain"
        android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="@string/date"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textSize="14dp"
                            android:typeface="normal" />

                        <TextView
                            android:id="@+id/event_date_inflate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="adress2"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textSize="14dp"
                            android:typeface="normal" />
                        <TextView
                            android:id="@+id/event_time_plain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="@string/time"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textSize="14dp"
                            android:typeface="normal" />

                        <TextView
                            android:id="@+id/event_time_inflate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:layout_marginLeft="20dp"
                            android:text="adress2" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/event_address_plain"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:text="@string/venue"
                            android:textAppearance="@style/TextAppearance.AppCompat"

                            android:textSize="14dp"
                            />

                        <TextView
                            android:id="@+id/event_address"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:layout_marginLeft="20dp"
                            android:text="adress2adress2adress2adress2adress2adress2"
                            android:textSize="14dp" />

                    </LinearLayout>
                </TableRow>


            </TableLayout>
</RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>