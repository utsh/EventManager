<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vimersia.utkarshsharma.eventmanager.Event_Details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_event_detail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/ic_launcher" />
        <TableLayout
            android:id="@+id/table_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_event_detail"
            >
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/event_detail_name_plain"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/name"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="14dp"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/event_detail_name_inflate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="NAME"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="14dp"
                        android:typeface="normal" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/event_detail_date_plain"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/date"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="14dp"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/event_detail_date_inflate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="adress2"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="14dp"
                        android:typeface="normal" />
                    <TextView
                        android:id="@+id/event_detail_time_plain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/time"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="14dp"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/event_detail_time_inflate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:layout_marginLeft="20dp"
                        android:text="adress2" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/event_detail_address_plain"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="@string/venue"
                        android:textAppearance="@style/TextAppearance.AppCompat"

                        android:textSize="14dp"
                        />

                    <TextView
                        android:id="@+id/event_detail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:layout_marginLeft="20dp"
                        android:text="adress2adress2adress2adress2adress2adress2"
                        android:textSize="14dp" />

                </LinearLayout>
            </TableRow>


        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/table_description">
            <TextView
                android:id="@+id/event_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anatomy z Physiology (B/C) - This event encompasses the anatomy and physiology of selected body systems, this year limited to nervous and endocrine systems and sense organs.

Astronomy (C) - Teams will demonstrate an understanding of stellar evolution andnd gas laws.
"/>

            <ImageButton
                android:id="@+id/map_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_detail_description"
                android:clickable="true"
                android:onClick="openmap"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@android:drawable/ic_dialog_map" />


        </LinearLayout>


    </RelativeLayout>



    </android.support.design.widget.CoordinatorLayout>
